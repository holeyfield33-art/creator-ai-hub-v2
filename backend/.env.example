# Database
DATABASE_URL=postgresql://username:password@localhost:5432/creator_ai_hub?schema=public
DIRECT_URL=postgresql://username:password@localhost:5432/creator_ai_hub

# Supabase Configuration
# Get these from your Supabase project settings: https://app.supabase.com
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# AI Configuration (Get your API key from https://platform.openai.com/api-keys)
# Use 'mock' for testing without an API key
AI_API_KEY=sk-your-openai-api-key-here
AI_MODEL=gpt-4o-mini
AI_BASE_URL=https://api.openai.com/v1

# Server
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# OAuth Credentials for X/Twitter
X_CLIENT_ID=your-twitter-client-id
X_CLIENT_SECRET=your-twitter-client-secret
X_CALLBACK_URL=http://localhost:3001/api/social/x/callback

# UploadThing Configuration
# Get your token from https://uploadthing.com
UPLOADTHING_SECRET=sk_live_your-secret-key
UPLOADTHING_APP_ID=your-app-id
UPLOADTHING_TOKEN=your-uploadthing-token-here
# Phase 13-15: Safety Configuration & Production Hardening

# Kill Switches (instant control without redeploy)
AI_DISABLED=false                  # Set to true to disable all AI processing
AUTO_PROCESSING=true                # Set to false to disable automatic processing

# File Upload Limits
MAX_FILE_SIZE_MB=100                # Maximum file size in MB (default: 100)
MAX_DURATION_MINUTES=60             # Maximum audio/video duration in minutes (default: 60)

# Daily Usage Quotas (per user, per day)
MAX_TRANSCRIPTIONS_PER_DAY=10       # Max transcriptions per user per day
MAX_GENERATIONS_PER_DAY=20          # Max asset generations per user per day

# Rate Limiting (Phase 14)
RATE_LIMIT_MAX=100                  # Max requests per 15 minutes (default: 100)