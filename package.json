{
  "name": "creator-ai-hub-v2",
  "version": "1.0.0",
  "description": "This repo is a reusable template to make Copilot work consistently across projects.",
  "main": "index.js",
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev --workspace=backend\" \"npm run dev --workspace=frontend\"",
    "backend:worker": "npm run worker --workspace=backend",
    "test": "npm run test --workspace=backend",
    "typecheck": "npm run typecheck --workspace=frontend && npm run build --workspace=backend",
    "lint": "npm run lint --workspace=frontend"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "npm@10",
  "devDependencies": {
    "concurrently": "^9.1.0",
    "typescript": "^5.9.3"
  }
}
